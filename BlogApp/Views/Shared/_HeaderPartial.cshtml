<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url(@Url.Content("~/images/" + BlogApp.Helpers.StaticValues.HomePageHeaderImage))">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>@BlogApp.Helpers.StaticValues.HeaderApplicationName</h1>
                    <hr class="small">
                    <span class="subheading">@BlogApp.Helpers.StaticValues.HeaderApplicationText</span>
                </div>
            </div>
        </div>
    </div>
</header>
